---
import Head from "../Page/Head.astro"
import Foot from "../Page/Foot.astro"
import type { ImageMetadata } from "astro"

interface Props {
	title: string;
	description: string;
	image?: ImageMetadata;
}

const { title, description, image } = Astro.props;
---

<Head title={title} description={description} image={image || undefined}>
    <slot name="head" />
</Head>

<slot/>

<Foot>
    <slot name="foot" />
</Foot>