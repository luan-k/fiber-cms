---

import SidebarIcon from "./SidebarIcon.astro";

import type { IconPath, IconGradient } from "@/types/admin/sidebar";

interface Props {
    iconPath?: IconPath;
    name?: string;
    link?: string;
    subItem?: boolean;
    gradient?: IconGradient;
}

const {
    iconPath = '',
    name = '',
    link = '#',
    subItem = false,
    gradient= ["#b3b3b34d", "#00000026"]
} = Astro.props;

const isActive = Astro.url.pathname === link;
const iconGradient = `background: linear-gradient(182deg, ${gradient[0]} 3.56%, ${gradient[1]} 101.28%); box-shadow: 0 0 5.5px 0 #00000026 inset;`

---

<a class={`sidebar-item ${subItem ? 'sub' : ''} ${isActive ? 'active' : ''}`} href={link}>
    {iconPath && <div class="sidebar-item__icon" style={`${isActive ? iconGradient : ''}`}><SidebarIcon path={iconPath} /><div/>}
    <span>{name}</span>
</a>

<style lang="scss">
    .sidebar-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.25rem 1rem;
        cursor: pointer;
        color: #333536;
        font-size: 1rem;
        height: fit-content;
        width: 100%;
        border-radius: 0.25rem;
        text-decoration: none;

        &:hover {
            background-color: #00000017;
        }

        &__icon {
            border-radius: .3rem;
            display: inline-flex;
        }

        &.active {
            color: black;
            font-weight: 600;
        }

        &.sub {
            padding-left: 4rem;

            span {
                height: 32px;
                display: flex;
                align-items: center;
            }
        }
    }
</style>